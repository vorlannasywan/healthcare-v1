<!DOCTYPE html>
<html>
<head>
    <title>Healthcare App</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <h1>Artikel Kesehatan orang jawa</h1>
    <form action="/search">
        <input name="query" placeholder="Cari artikel">
        <select name="category">
            <option value="">Semua Kategori</option>
            <% categories.forEach(cat => { %>
                <option value="<%= cat.id %>"><%= cat.name %></option>
            <% }) %>
        </select>
        <button>Cari</button>
    </form>
    <ul>
        <% articles.forEach(art => { %>
            <li><a href="/article/<%= art.id %>"><%= art.title %></a> - Kategori: <%= art.category || 'Umum' %></li>
        <% }) %>
    </ul>
    <!-- Chatbot Bubble -->
    <div id="chat-bubble">Chat AI</div>
    <div id="chat-window" style="display:none;">
        <div id="chat-messages"></div>
        <input id="chat-input" placeholder="Tanya tentang kesehatan">
        <button onclick="sendChat()">Kirim</button>
    </div>
    <script src="/js/chat.js"></script>
</body>
</html>