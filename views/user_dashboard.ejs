<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Pengguna - Healthcare</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 font-sans">
    <!-- Header -->
    <header class="bg-blue-600 text-white p-4 shadow-md">
        <div class="container mx-auto flex justify-between items-center">
            <h1 class="text-2xl font-bold">Healthcare</h1>
            <nav>
                <a href="/dashboard" class="px-3 hover:underline">Dashboard</a>
                <a href="/chatbot" class="px-3 hover:underline">Chatbot</a>
                <a href="/" class="px-3 hover:underline">Beranda</a>
                <a href="/logout" class="px-3 hover:underline">Logout</a>
            </nav>
        </div>
    </header>

    <!-- Main Content with Sidebar -->
    <div class="container mx-auto flex my-6">
        <!-- Sidebar -->
        <aside class="w-1/4 bg-white p-4 rounded-lg shadow-md mr-6">
            <h2 class="text-lg font-semibold mb-4">Navigasi</h2>
            <ul>
                <li class="mb-2"><a href="/dashboard" class="text-blue-600 hover:underline">Riwayat Chat</a></li>
                <li class="mb-2"><a href="/favorites" class="text-blue-600 hover:underline">Artikel Favorit</a></li>
            </ul>
        </aside>

        <!-- Main Content -->
        <main class="w-3/4">
            <h2 class="text-2xl font-bold mb-4">Riwayat Chat</h2>
            <div class="bg-white p-4 rounded-lg shadow-md mb-6">
                <% chats.forEach(chat => { %>
                    <div class="border-b py-2">
                        <p><strong>Pertanyaan:</strong> <%= chat.question %></p>
                        <p><strong>Jawaban:</strong> <%= chat.answer %></p>
                    </div>
                <% }) %>
            </div>

            <h2 class="text-2xl font-bold mb-4">Artikel Favorit</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% favorites.forEach(favorite => { %>
                    <div class="bg-white p-4 rounded-lg shadow-md">
                        <h3 class="text-lg font-semibold"><%= favorite.title %></h3>
                        <a href="/article/<%= favorite.id %>" class="text-blue-600 hover:underline">Baca Selengkapnya</a>
                    </div>
                <% }) %>
            </div>
        </main>
    </div>

    <!-- Footer -->
    <footer class="bg-blue-600 text-white p-4 text-center">
        <p>&copy; 2025 Healthcare @itenas. All rights reserved.</p>
    </footer>
</body>
</html>