<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= article.title %> - Healthcare</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 font-sans">
    <!-- Header -->
    <header class="bg-blue-600 text-white p-4 shadow-md">
        <div class="container mx-auto flex justify-between items-center">
            <h1 class="text-2xl font-bold">Healthcare</h1>
            <nav>
                <a href="/dashboard" class="px-3 hover:underline">Dashboard</a>
                <a href="/chatbot" class="px-3 hover:underline">Chatbot</a>
                <a href="/" class="px-3 hover:underline">Beranda</a>
                <a href="/logout" class="px-3 hover:underline">Logout</a>
            </nav>
        </div>
    </header>

    <!-- Main Content with Sidebar -->
    <div class="container mx-auto flex my-6">
        <!-- Sidebar -->
        <aside class="w-1/4 bg-white p-4 rounded-lg shadow-md mr-6">
            <h2 class="text-lg font-semibold mb-4">Kategori Artikel</h2>
            <ul>
                <% categories.forEach(category => { %>
                    <li class="mb-2">
                        <a href="/category/<%= category.id %>" class="text-blue-600 hover:underline"><%= category.name %></a>
                    </li>
                <% }) %>
            </ul>
        </aside>

        <!-- Main Content -->
        <main class="w-3/4">
            <div class="bg-white p-4 rounded-lg shadow-md">
                <h2 class="text-2xl font-bold mb-4"><%= article.title %></h2>
                <img src="<%= article.image_url || 'https://via.placeholder.com/600' %>" alt="Article Image" class="w-full h-64 object-cover rounded-md mb-4">
                <p class="text-gray-600 mb-4"><%= article.content %></p>
                <p class="text-gray-600"><strong>Referensi:</strong> <%= article.references %></p>
                <a href="/article/<%= article.id %>/favorite" class="bg-blue-600 text-white p-2 rounded-lg hover:bg-blue-700 inline-block mt-4">Tambah Favorit</a>
            </div>
        </main>
    </div>

    <!-- Footer -->
    <footer class="bg-blue-600 text-white p-4 text-center">
        <p>&copy; 2025 Healthcare @itenas. All rights reserved.</p>
    </footer>
</body>
</html>