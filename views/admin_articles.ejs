<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Kelola Artikel - Healthcare</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 font-sans">
  <!-- Header -->
  <header class="bg-blue-600 text-white p-4 shadow-md">
    <div class="container mx-auto flex justify-between items-center">
      <h1 class="text-2xl font-bold">Healthcare</h1>
      <nav>
        <a href="/admin/dashboard" class="px-3 hover:underline">Dashboard</a>
        <a href="/admin/articles" class="px-3 hover:underline">Kelola Artikel</a>
        <a href="/logout" class="px-3 hover:underline">Logout</a>
      </nav>
    </div>
  </header>

  <!-- Main Content with Sidebar -->
  <div class="container mx-auto flex my-6 gap-6">
    <!-- Sidebar -->
    <aside class="w-1/4 bg-white p-4 rounded-lg shadow-md">
      <h2 class="text-lg font-semibold mb-4">Kategori Artikel</h2>
      <ul>
        <% categories.forEach(category => { %>
          <li class="mb-2">
            <a href="/admin/articles?category=<%= category.id %>" class="text-blue-600 hover:underline">
              <%= category.name %>
            </a>
          </li>
        <% }) %>
      </ul>
    </aside>

    <!-- Main Content -->
    <main class="w-3/4">
      <h2 class="text-2xl font-bold mb-4">Kelola Artikel</h2>

      <!-- Form Tambah Artikel -->
      <div class="bg-white p-4 rounded-lg shadow-md mb-6">
        <h3 class="text-lg font-semibold mb-3">Tambah Artikel Baru</h3>
        <form action="/admin/article" method="POST" enctype="multipart/form-data" class="grid gap-3">
          <input name="title" placeholder="Judul" class="p-2 border rounded-lg">
          <textarea name="content" placeholder="Isi artikel..." rows="5" class="p-2 border rounded-lg"></textarea>
          <select name="category_id" class="p-2 border rounded-lg">
            <% categories.forEach(cat => { %>
              <option value="<%= cat.id %>"><%= cat.name %></option>
            <% }) %>
          </select>
          <input type="file" name="image" class="p-2 border rounded-lg">
          <textarea name="article_references" placeholder="Referensi artikel..." rows="3" class="p-2 border rounded-lg"></textarea>
          <button type="submit" class="bg-blue-600 text-white p-2 rounded-lg hover:bg-blue-700">Tambah</button>
        </form>
      </div>

      <!-- Daftar Artikel -->
      <div class="bg-white p-4 rounded-lg shadow-md">
        <h3 class="text-lg font-semibold mb-3">Daftar Artikel</h3>
        <% articles.forEach(art => { %>
          <div class="border-b py-4">
            <h4 class="font-bold mb-2"><%= art.title %> - Kategori: <%= art.category %></h4>

            <!-- Form Update -->
            <form action="/admin/article/<%= art.id %>/update" method="POST" enctype="multipart/form-data" class="grid gap-3 mb-2">
              <input name="title" value="<%= art.title %>" class="p-2 border rounded-lg">
              <textarea name="content" rows="5" class="p-2 border rounded-lg"><%= art.content %></textarea>
              <select name="category_id" class="p-2 border rounded-lg">
                <option value="<%= art.category_id %>"><%= art.category %></option>
                <% categories.forEach(cat => { if (cat.id != art.category_id) { %>
                  <option value="<%= cat.id %>"><%= cat.name %></option>
                <% } }) %>
              </select>
              <input type="file" name="image" class="p-2 border rounded-lg">
              <textarea name="article_references" rows="3" class="p-2 border rounded-lg"><%= art.article_references %></textarea>
              <button type="submit" class="bg-green-600 text-white p-2 rounded-lg hover:bg-green-700">Update</button>
            </form>

            <!-- Form Hapus -->
            <form action="/admin/article/<%= art.id %>/delete" method="POST">
              <button type="submit" class="bg-red-600 text-white px-3 py-2 rounded-lg hover:bg-red-700">Hapus</button>
            </form>
          </div>
        <% }) %>
      </div>
    </main>
  </div>

  <!-- Footer -->
  <footer class="bg-blue-600 text-white p-4 text-center">
    <p>&copy; 2025 Healthcare @itenas. All rights reserved.</p>
  </footer>
</body>
</html>
