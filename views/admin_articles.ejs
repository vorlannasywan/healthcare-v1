<!DOCTYPE html>
<html>
<head>
    <title>Kelola Artikel</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="admin-articles">
        <h1>Kelola Artikel</h1>

        <!-- Form Tambah Artikel -->
        <form class="article-form" action="/admin/article" method="POST" enctype="multipart/form-data">
            <input name="title" placeholder="Judul">
            <textarea name="content" placeholder="Isi"></textarea>
            <select name="category_id">
                <% categories.forEach(cat => { %>
                    <option value="<%= cat.id %>"><%= cat.name %></option>
                <% }) %>
            </select>
            <input type="file" name="image">
            <textarea name="article_references" placeholder="Referensi"></textarea>
            <button type="submit">Tambah</button>
        </form>

        <!-- Daftar Artikel -->
        <ul class="article-list">
            <% articles.forEach(art => { %>
                <li>
                    <h3><%= art.title %> - Kategori: <%= art.category %></h3>

                    <!-- Form Update Artikel -->
                    <form class="article-form" action="/admin/article/<%= art.id %>/update" method="POST" enctype="multipart/form-data">
                        <input name="title" value="<%= art.title %>">
                        <textarea name="content"><%= art.content %></textarea>
                        <select name="category_id">
                            <option value="<%= art.category_id %>"><%= art.category %></option>
                            <% categories.forEach(cat => { if (cat.id != art.category_id) { %>
                                <option value="<%= cat.id %>"><%= cat.name %></option>
                            <% } }) %>
                        </select>
                        <input type="file" name="image">
                        <textarea name="article_references"><%= art.article_references %></textarea>
                        <button type="submit">Update</button>
                    </form>

                    <!-- Form Hapus -->
                    <form action="/admin/article/<%= art.id %>/delete" method="POST">
                        <button class="btn-delete">Hapus</button>
                    </form>
                </li>
            <% }) %>
        </ul>
    </div>
</body>
</html>
